<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobi.gastronomica.fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_btn"
        android:layout_marginTop="@dimen/space_layout_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_donde_ir"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_main_height"
                android:layout_weight="1"
                android:background="@drawable/btn_restaurantes"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/layout_padding">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:maxHeight="@dimen/btn_max"
                    android:maxWidth="@dimen/btn_max"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_restaurantes" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_margin"
                    android:lines="1"
                    android:text="@string/donde_ir"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button" />
            </LinearLayout>

            <android.widget.Space
                android:layout_width="@dimen/space_btn"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/btn_eventos"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_main_height"
                android:layout_weight="1"
                android:background="@drawable/btn_eventos"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/layout_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:maxHeight="@dimen/btn_max"
                    android:maxWidth="@dimen/btn_max"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_eventos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/text_margin"
                    android:lines="1"
                    android:text="@string/eventos"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button" />
            </LinearLayout>
        </LinearLayout>

        <android.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_layout_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_colaboraciones"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_main_height"
                android:layout_weight="1"
                android:background="@drawable/btn_colaboradores"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/layout_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:maxHeight="@dimen/btn_max"
                    android:maxWidth="@dimen/btn_max"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_colaboradores" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:lines="1"
                    android:text="@string/colaboradores"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button" />
            </LinearLayout>

            <android.widget.Space
                android:layout_width="@dimen/space_btn"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_main_height"
                android:layout_weight="1"
                android:background="@drawable/btn_colaboradores"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/layout_padding"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:maxHeight="@dimen/btn_max"
                    android:maxWidth="@dimen/btn_max"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_colaboradores" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:lines="1"
                    android:text="@string/colaboradores"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>