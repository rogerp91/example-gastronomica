<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Login progress -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <mobi.gastronomica.components.ProgressWheel
            android:id="@+id/progress"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            wheel:matProg_barColor="@color/primary"
            wheel:matProg_progressIndeterminate="true" />

        <Button
            android:id="@+id/btn_no_conexion"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar"
            android:text="No se pudo cargar el contenido"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_no_eventos"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar"
            android:text="No existen eventos cercanos"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_no_restautantes"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar"
            android:text="No hay restaurantes cerca"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_no_ubicacion"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar"
            android:text="@string/no_ubicacion"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_no_contenido"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar"
            android:text="@string/no_contenido"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_no_resena"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_ingresar"
            android:text="No hay reseÃ±a disponible"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button"
            android:visibility="gone" />
    </LinearLayout>

</merge>
