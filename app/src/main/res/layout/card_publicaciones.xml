<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_card_restaurant"
    android:paddingRight="@dimen/padding_card_restaurant"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/style_card_text_restaurantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title" />

        <android.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="3"
            android:text="adalsjdj"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/subhead" />

        <TextView
            android:id="@+id/date_publicated"
            style="@style/style_card_text_restaurantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:text="asdfasd"
            android:textColor="@android:color/black"
            android:textSize="@dimen/subhead" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_line_height"
            android:layout_margin="@dimen/view_line_margin"
            android:background="@color/divider" />
    </LinearLayout>
</LinearLayout>
