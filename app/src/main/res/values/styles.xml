<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="style_card_text_restaurantes">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="style_edit_text">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColor">#BFFFFFFF</item>
        <item name="android:textColorHint">#99FFFFFF</item>:
    </style>

    <style name="style_edit_text_reset">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
